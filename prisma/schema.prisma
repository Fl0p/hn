// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
    output   = "../generated/prisma"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

// Case - Administrative case/matter (Sprava)
model Post {
    id          String              @id @default(cuid())
    name        String
    initialPdf  InitialPdf?
    conversationPdf ConversationPdf[]
    prolongationPdf ProlongatedPdf[]
    decisionPdf DecisionPdf[]
    initDate    String?          @default("2000-01-01")
    caseNumber  String           @default("")
    partyType   String           @default("")
    createdAt   DateTime         @default(now())
    updatedAt   DateTime         @updatedAt
    status      SubmissionStatus @default(INITIALIZED)

    @@index([name])
    @@index([caseNumber])
    @@index([partyType])
}

enum SubmissionStatus {
    INITIALIZED
    ANALYZED
    IN_PROGRESS
    PROLONGATED
    DECISION_MADE
    COMPLETED
}

model InitialPdf {
    id String @id @default(cuid())
    url String @unique
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    postId String @unique
    post Post @relation(fields: [postId], references: [id], onDelete: Cascade)

    @@index([url])
    @@index([postId])
}

model ProlongatedPdf {
    id String @id @default(cuid())
    url String @unique
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    postId String
    post Post @relation(fields: [postId], references: [id], onDelete: Cascade)

    @@index([url])
    @@index([postId])
}

model DecisionPdf {
    id String @id @default(cuid())
    url String @unique
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    postId String
    post Post @relation(fields: [postId], references: [id], onDelete: Cascade)

    @@index([url])
    @@index([postId])
}

model ConversationPdf {
    id String @id @default(cuid())
    url String @unique
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    postId String
    post Post @relation(fields: [postId], references: [id], onDelete: Cascade)

    @@index([url])
    @@index([postId])
}